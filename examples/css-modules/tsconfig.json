{
  "compilerOptions": {
    "jsx": "preserve",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowArbitraryExtensions": true,

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "exclude": ["dist/"],
}
