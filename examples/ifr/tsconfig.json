{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "@lynx-js/react",

    // "module": "node16",
    // "moduleResolution": "node16",

    // "module": "NodeNext",
    "module": "ES2022",
    // "moduleResolution": "NodeNext",
    "moduleResolution": "bundler",

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "exclude": ["dist/"],
}
